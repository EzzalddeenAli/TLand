<android.support.v4.widget.NestedScrollView android:id="@+id/ll_advertisdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp4"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_advertisdetails1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:enabled="true"
                android:visibility="gone"
                map:uiRotateGestures="true"
                map:uiScrollGestures="true"
                map:uiTiltGestures="true"
                map:uiZoomGestures="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp4"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@drawable/post_details_header"
            android:gravity="center"
            android:paddingBottom="@dimen/dp4"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:paddingTop="@dimen/dp4"
            android:text="معرفی"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:id="@+id/ll_baseProperty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_details_border"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:lineSpacingMultiplier="1.25"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/post_details_header"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:text="اطلاعات اصلی"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp4"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@drawable/post_details_header"
            android:gravity="center"
            android:paddingBottom="@dimen/dp4"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:paddingTop="@dimen/dp4"
            android:text="قوانین"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:id="@+id/ll_rules"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp16"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_contactWays"
                style="@style/RegButton"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="تماس با مدیریت" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
