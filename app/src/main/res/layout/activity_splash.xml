<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    tools:context=".Activities.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.jaredrummler.android.widget.AnimatedSvgView
                android:id="@+id/animated_svg_view"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                app:animatedSvgFillColors="@array/google_glyph_colors"
                app:animatedSvgFillStart="2000"
                app:animatedSvgFillTime="1500"
                app:animatedSvgGlyphStrings="@array/google_glyph_strings"
                app:animatedSvgImageSizeX="245"
                app:animatedSvgImageSizeY="245"
                app:animatedSvgTraceTime="3000"
                app:animatedSvgTraceTimePerGlyph="3000" />

            <com.jaredrummler.android.widget.AnimatedSvgView
                android:id="@+id/line_svg_view"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp16"
                android:gravity="center"
                app:animatedSvgFillColors="@array/google_glyph_colors"
                app:animatedSvgFillStart="2000"
                app:animatedSvgFillTime="1500"
                app:animatedSvgGlyphStrings="@array/line_glyph_strings"
                app:animatedSvgImageSizeX="300"
                app:animatedSvgImageSizeY="20"
                app:animatedSvgTraceTime="3000"
                app:animatedSvgTraceTimePerGlyph="3000" />

            <com.jaredrummler.android.widget.AnimatedSvgView
                android:id="@+id/font_svg_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:animatedSvgFillColors="@array/google_glyph_colors"
                app:animatedSvgFillStart="1200"
                app:animatedSvgFillTime="1000"
                app:animatedSvgGlyphStrings="@array/font_glyph_strings"
                app:animatedSvgImageSizeX="300"
                app:animatedSvgImageSizeY="150"
                app:animatedSvgTraceTime="2000"
                app:animatedSvgTraceTimePerGlyph="2000" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
