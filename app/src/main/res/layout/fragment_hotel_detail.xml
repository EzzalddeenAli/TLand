<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_advertisdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp4"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/ll_advertisdetails1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp4"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@drawable/post_details_header"
            android:gravity="center"
            android:paddingBottom="@dimen/dp4"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:paddingTop="@dimen/dp4"
            android:text="معرفی"
            fontPath="fonts/IRANSansBold.ttf"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:id="@+id/ll_baseProperty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_details_border"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.25"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/post_details_header"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:text="اطلاعات اصلی"
                fontPath="fonts/IRANSansBold.ttf"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rules"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/post_details_header"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:text="قوانین"
                fontPath="fonts/IRANSansBold.ttf"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_advantage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/post_details_header"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                fontPath="fonts/IRANSansBold.ttf"
                android:text="امتیازات مسافران"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rate"
                fontPath="fonts/IRANSansBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:textColor="#c8da0007"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp16"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_contactWays"
                style="@style/RegButton"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="تماس با مدیریت" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
