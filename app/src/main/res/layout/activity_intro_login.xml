<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <com.jaredrummler.android.widget.AnimatedSvgView
                android:id="@+id/font_svg_view"
                android:layout_width="200dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp16"
                android:gravity="center"
                app:animatedSvgFillColors="@array/google_glyph_colors"
                app:animatedSvgFillStart="1200"
                app:animatedSvgFillTime="1000"
                app:animatedSvgGlyphStrings="@array/font_intro_svg"
                app:animatedSvgImageSizeX="300"
                app:animatedSvgImageSizeY="150"
                app:animatedSvgTraceTime="2000"
                app:animatedSvgTraceTimePerGlyph="2000" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--<ir.touristland.Constant.ArcLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dip"

        >

        &lt;!&ndash;  <com.flaviofaria.kenburnsview.KenBurnsView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:src="@drawable/arclayout_rogue"
              />&ndash;&gt;



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/flight_ticket"
                android:scaleType="centerCrop"
                />

    </ir.touristland.Constant.ArcLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <com.makeramen.roundedimageview.RoundedImageView
                    style="@style/HomeFra_TextView"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/kish_services"
                    app:riv_corner_radius="10dip" />

                <TextView
                    style="@style/HomeFra_TextView"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="خدمات گردشگری" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35">

                <com.makeramen.roundedimageview.RoundedImageView
                    style="@style/HomeFra_TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/rent_car"
                    app:riv_corner_radius="10dip" />

                <TextView
                    style="@style/HomeFra_TextView"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="رنت اتومبیل" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/btn_flight"
                    style="@style/HomeFra_TextView"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/flight_ticket"
                    app:riv_corner_radius="10dip" />

                <TextView
                    style="@style/HomeFra_TextView"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="رزرو بلیط هواپیما" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/btn_kishgardi"
                    style="@style/HomeFra_TextView"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/kish_gardi"
                    app:riv_corner_radius="10dip" />

                <TextView
                    style="@style/HomeFra_TextView"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="کیش گردی" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_hotel"
            style="@style/HomeFra_TextView"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@mipmap/hotel"
            app:riv_corner_radius="10dip" />

        <TextView
            style="@style/HomeFra_TextView"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="رزرو هتل" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation_background"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_after"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_support"
                style="@style/txt_navigation_bottom"
                android:text="درباره ما" />
        </RelativeLayout>

        <View
            style="@style/txt_navigation_bottom"
            android:drawableTop="@mipmap/nav_search" />

        <RelativeLayout
            android:id="@+id/rl_before"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_news"
                style="@style/txt_navigation_bottom"
                android:text="اخبار و رویدادها" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
